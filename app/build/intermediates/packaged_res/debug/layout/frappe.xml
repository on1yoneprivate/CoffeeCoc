                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="망고 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="자몽 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="초콜렛 칩 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="민트 초콜렛 칩 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="플레인 요거트 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="블루베리 요거트 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/coffee_1"
                android:paddingLeft="20dp"
                android:text="딸기 요거트 플랫치노"
                android:textColor="@color/white"
                android:typeface="sans" />

