<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory"
        android:padding="10dp">

        <!--좌측 최상단 갈색 글자 "Tip"-->
        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip"
            android:textSize="50dp"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="@color/brown" />



        <!--최상단의 팁1 글자-->
        <TextView
            android:id="@+id/tip_1"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="메뉴 버튼 한 번 클릭 > 지도에 카페 위치 표시"
            android:layout_toRightOf="@+id/tip"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/brown2"
            android:fontFamily="@font/bmhanna_11yrs_otf"
            android:textSize="15dp"/>

        <!--최상단의 팁2 글자-->
        <TextView
            android:id="@+id/tip_2"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text = "메뉴 버튼 길게 클릭 > 해당 카페 사이트로 이동"
            android:layout_toRightOf="@+id/tip"
            android:layout_below="@+id/tip_1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/brown2"
            android:fontFamily="@font/bmhanna_11yrs_otf"
            android:textSize="15dp"/>


    </RelativeLayout>

    <!--중앙 상단의 버튼 목록 화면, 반절 크기의 화면에 카페 버튼을 모두 넣고 살펴보기 위해 스크롤뷰를 사용-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF3E6"
            android:columnCount="5"
            android:orientation="vertical"
            android:rowCount="10">

            <!-- 이디야 로고 이미지-->
            <ImageView
                android:id="@+id/ediya"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ediya" />

            <!--이디야 버튼-->
            <Button
                android:id="@+id/btn_ediya"
                android:layout_width="365dp"
                android:layout_height="48dp"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="이디야 커피"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 스타벅스 로고 이미지-->
            <ImageView
                android:id="@+id/starbucks"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/starbucks" />

            <!-- 스타벅스 버튼-->
            <Button
                android:id="@+id/btn_starbucks"
                android:layout_width="365dp"
                android:layout_height="48dp"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="스타벅스"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 투썸 플레이스 로고 이미지-->
            <ImageView
                android:id="@+id/twosome"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/twosome" />

            <!-- 투썸 플레이스 버튼-->
            <Button
                android:id="@+id/btn_twosome"
                android:layout_width="365dp"
                android:layout_height="48dp"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="투썸 플레이스"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 메가커피 로고 이미지-->
            <ImageView
                android:id="@+id/mega"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/mega" />

            <!-- 메가커피 버튼-->
            <Button
                android:id="@+id/btn_mega"
                android:layout_width="365dp"
                android:layout_height="48dp"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="메가커피"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 매머드커피 로고 이미지-->
            <ImageView
                android:id="@+id/mmth"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="4"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/mmth" />

            <!-- 매머드커피 버튼-->
            <Button
                android:id="@+id/btn_mmth"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="매머드커피"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 컴포즈 로고 이미지-->
            <ImageView
                android:id="@+id/compose"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="5"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/compose" />

            <!-- 컴포즈 버튼-->
            <Button
                android:id="@+id/btn_compose"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:layout_row="5"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="컴포즈 커피"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 카페 게이트 로고 이미지-->
            <ImageView
                android:id="@+id/gate"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="6"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/gate" />

            <!--게이트 버튼-->
            <Button
                android:id="@+id/btn_gate"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:layout_row="6"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="게이트"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 파스쿠찌 로고 이미지-->
            <ImageView
                android:id="@+id/pascucci"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="7"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/pascucci" />

            <!-- 파스쿠찌 버튼-->
            <Button
                android:id="@+id/btn_pascucci"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:layout_row="7"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="파스쿠찌"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <!-- 할리스 로고 이미지-->
            <ImageView
                android:id="@+id/hollys"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_row="8"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/hollys" />

            <!--할리스 버튼-->
            <Button
                android:id="@+id/btn_hollys"
                android:layout_width="365dp"
                android:layout_height="40dp"
                android:layout_row="8"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:background="@drawable/bg_custom_button_2"
                android:gravity="center"
                android:text="할리스"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />


        </GridLayout>
    </ScrollView>
    <!--중앙 하단에 네이버 지도를 띄우기 위해 MapFragment 사용-->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map_fragment"
        android:name="com.naver.maps.map.MapFragment"

        />

    <!--최하단 바-->
    <RelativeLayout
        android:id="@+id/bottom_nav"
        android:layout_width="480dp"
        android:layout_height="76dp"
        android:background="#834D1E"
        android:layout_alignParentBottom="true">

        <!--menu 버튼: menu 창으로 전환-->
        <ImageButton
            android:id="@+id/nav_menu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="7dp"
            android:background="#834D1E"
            android:src="@drawable/bottom_menu"
            android:text="menu"
            android:padding="8dp"
            android:textSize="14sp"
            android:gravity="center" />

        <!--map 버튼: map 창으로 전환-->
        <ImageButton
            android:id="@+id/nav_map"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@id/nav_menu"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/bottom_map"
            android:background="#834D1E"
            android:text="Map"
            android:padding="8dp"
            android:textSize="14sp"
            android:gravity="center"
            android:onClick="onMapButtonClick"/>

        <!--like 버튼, like 창으로 전환-->
        <ImageButton
            android:id="@+id/nav_like"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/bottom_like"
            android:background="#834D1E"
            android:layout_toRightOf="@id/nav_map"
            android:text="like"
            android:padding="8dp"
            android:textSize="14sp"
            android:gravity="center" />
    </RelativeLayout>
</LinearLayout>